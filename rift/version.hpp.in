#pragma once

// The numeric version format is AAAAABBBBBCCCCCDDDE where:
//
// AAAAA - major version number
// BBBBB - minor version number
// CCCCC - bugfix version number
// DDD   - alpha / beta (DDD + 500) version number
// E     - final (0) / snapshot (1)
//
// When DDDE is not 0, 1 is subtracted from AAAAABBBBBCCCCC. For example:
//
// Version      AAAAABBBBBCCCCCDDDE
//
// 0.1.0        0000000001000000000
// 0.1.2        0000000001000020000
// 1.2.3        0000100002000030000
// 2.2.0-a.1    0000200001999990010
// 3.0.0-b.2    0000299999999995020
// 2.2.0-a.1.z  0000200001999990011
//
#define RIFT_VERSION       $rift.version.project_number$ULL
#define RIFT_VERSION_STR   "$rift.version.project$"
#define RIFT_VERSION_ID    "$rift.version.project_id$"
#define RIFT_VERSION_FULL  "$rift.version$"

#define RIFT_VERSION_MAJOR $rift.version.major$
#define RIFT_VERSION_MINOR $rift.version.minor$
#define RIFT_VERSION_PATCH $rift.version.patch$

#define RIFT_PRE_RELEASE   $rift.version.pre_release$

#define RIFT_SNAPSHOT_SN   $rift.version.snapshot_sn$ULL
#define RIFT_SNAPSHOT_ID   "$rift.version.snapshot_id$"
